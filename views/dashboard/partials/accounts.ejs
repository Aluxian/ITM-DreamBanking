<div class="content active" id="panel3-1">
  <div class="medium-9 columns">
    <h4>My Accounts</h4>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Type</th>
          <th>Currency</th>
          <th>Amount</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for (var i=0; i < user.accounts.length; i++) { %>
          <tr>
            <td><%= user.accounts[i].id %></td>
            <td><%= user.accounts[i].type %></td>
            <td><%= user.accounts[i].currency %></td>
            <td><%= user.accounts[i].amount %></td>
            <td>
              <a href="/account/<%= user.accounts[i].id %>/delete" title="Delete Account">
                <span class="alert round label">DEL</span>
              </a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <% if (!user.accounts.length) { %>
      <p class="text-center">
        You don't have any accounts!
      </p>
    <% } %>
  </div>
</div>
