<div class="content" id="panel3-3">
  <div class="medium-9 columns">
    <h4>My Transactions</h4>

    <table>
      <thead>
        <tr>
          <th>From User</th>
          <th>From Account</th>
          <th>To User</th>
          <th>To Account</th>
          <th>Amount</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for (var i=0; i < user.transactions.length; i++) { %>
          <tr>
            <td><%= (user.id == user.transactions[i].fromUser) ? 'Me' : user.transactions[i].fromUser %></td>
            <td><%= user.transactions[i].fromAccount %></td>
            <td><%= (user.id == user.transactions[i].toUser) ? 'Me' : user.transactions[i].toUser %></td>
            <td><%= user.transactions[i].toAccount %></td>
            <td><%= user.transactions[i].amount %></td>
            <td>
              <a href="/transaction/<%= user.transactions[i].id %>/delete" title="Delete Transaction. The money will not be transferred back!">
                <span class="alert round label">DEL</span>
              </a>
              <!--<a href="/transaction/<%= user.transactions[i].id %>/undo" title="Undo Transaction">
                <span class="success round label">UNDO</span>
              </a>-->
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <% if (!user.transactions.length) { %>
      <p class="text-center">
        You don't have any transactions!
      </p>
    <% } %>
  </div>
</div>
